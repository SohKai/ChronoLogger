<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabFragmentHome" >
    
    <ImageView android:id="@+id/home_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/chrono_logo"
        android:contentDescription="@string/res_logo"
        />

    <ListView android:id="@+id/home_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_logo"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/listview_horizontal_padding"
        android:paddingRight="@dimen/listview_horizontal_padding"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideInset"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="true"
        />

</RelativeLayout>
